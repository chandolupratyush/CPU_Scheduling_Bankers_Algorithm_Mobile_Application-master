<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_roundrobin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.cpuscheduling.Roundrobin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/qasw"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Round Robin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@drawable/qasw"

        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_margin="10dp"

            android:layout_weight="1"
            android:text="ADD"
            android:textColor="#000000"
            android:background="@drawable/qwerty"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:id="@+id/buttonClick" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"

            android:text="DELETE"
            android:background="@drawable/qwerty"
            android:textColor="#000000"
            android:textSize="20sp"
            android:id="@+id/delete"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="20sp"
            android:text="Time Quantum : "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/qasw"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:layout_height="match_parent"
            android:orientation="vertical">


<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/textview1rr"
    android:textColor="#ffffff"
    android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="RESET"
            android:layout_margin="10dp"

            android:textColor="#000000"
            android:background="@drawable/qwerty"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:id="@+id/reset" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="COMPUTE"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"

            android:background="@drawable/qwerty"
            android:layout_height="match_parent"
            android:id="@+id/compute" />
    </LinearLayout>
</LinearLayout>



